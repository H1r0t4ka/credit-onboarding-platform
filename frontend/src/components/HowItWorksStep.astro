---
interface Props {
    icon: string; // Una clase de icono o un simple nombre para el SVG
    title: string;
    description: string;
    stepNumber: number;
}

const { icon, title, description, stepNumber } = Astro.props;
---

<div
    class="flex-1 min-w-[280px] bg-white border border-gray-200 rounded-lg p-6 text-center shadow-lg transition duration-300 hover:shadow-xl"
>
    <div
        class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-[#E8F1FB] text-[#1173D4] mb-4"
    >
        <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
        >
            {
                icon === "file" ? (
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    />
                ) : icon === "clock" ? (
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                ) : (
                    // money
                    <path
